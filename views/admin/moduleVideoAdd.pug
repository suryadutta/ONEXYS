extends ../layout

block content

    a(href='/admin/modules/'+moduleID+'/edit?course-id='+course_id+'&course-title='+course_title+'&user-id='+user_id) Go Back

    h1='Add Video to ONEXYS Module ' + moduleID
    h3=course

    form(method='POST' action='')
        input(type='hidden', value=course_id, name='course-id')
        input(type='hidden', value=course_title, name='course-title')
        input(type='hidden', value=user_id, name='user-id')

        div.form-group
        label(for='video_desc') Video Description:
        input#video_desc.form-control(type='text', name='video_desc', required)
        br
        br

        div.form-group
        label(for='video_src') Video Source:
        input#video_src.form-control(type='text', name='video_src', required)
        br
        br

        div.form-group
        label(for='video_image_src') Video Image Path:
        input#video_image_src.form-control(type='text', name='video_image_src', required)
        br
        br

        button.btn.btn-primary(type='submit') Add Video
