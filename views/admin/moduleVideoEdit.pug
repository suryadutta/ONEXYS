extends ../layout

block content
  script.
    const herokuAPI = "/api",
      moduleID = "#{moduleID}",
      videoID = "#{videoID}",
      edit = true,
      courseID = "#{courseID}",
      needs = ["courseTitle", "moduleVideos"];  
  
  script(src="/js/middleman_admin.js")
  br
  #fullscr-loading
      div
      img(src="https://i.gyazo.com/c45fc9a6995912367a142ca33702366a.gif")
  .container(style="margin-top: 25px;")
      .row
          .col-md-1
          .col.form-inline
              a.btn.btn-lg(href=`/admin/modules/edit/${moduleID}`)
                  i.fa.fa-chevron-left
              h2#adminPanelTitle='Loading title...'
          .col-md-1
  hr

  main.d-flex.flex-column.w-50(style="margin-left: auto; margin-right: auto;")
    h3 Editing video #{id}
    div.d-flex.flex-column 
      label(for="video_src") Video Source:
      input#video_src.form-control(type='text', value="")
    hr
    div.d-flex.flex-column
      label(for="video_image_src") Video Thumbnail:
      input#video_image_src.form-control(type='text', value="")
    hr
    div.d-flex.flex-column
      label(for="video_desc") Video Description:
      textarea#video_desc.form-control(type='text', value="")
    hr
    div.d-flex.flex-column
      label(for="video_desc_helper") Video Description Helper (optional):
      textarea#video_desc_helper.form-control(type='text', value="")
    hr
    div.d-flex.flex-column
      label(for="position") Video Position:
      input#position.form-control(type='number', min="0" value="" size=4 style="width: min-content")
    hr
    div 
      button.btn.btn-success(onClick="updateModuleVid()") Go live
